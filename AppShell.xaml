<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Ejercicio_1._1___Calculadora.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Ejercicio_1._1___Calculadora"
    Shell.FlyoutBehavior="Disabled"
    Title="Ejercicio_1._1___Calculadora">

    <Shell.Resources>
        <ResourceDictionary>
            <Style TargetType="Shell">
                <Setter Property="Shell.BackgroundColor" Value="LightBlue" />
                <Setter Property="Shell.ForegroundColor" Value="White" />
                <Setter Property="Shell.TitleColor" Value="White" />
                <Setter Property="Shell.DisabledColor" Value="Gray" />
                <Setter Property="Shell.UnselectedColor" Value="White" />
                <Setter Property="Shell.NavBarIsVisible" Value="True" />
            </Style>
        </ResourceDictionary>
    </Shell.Resources>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
